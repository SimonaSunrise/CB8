<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/generi_style.css" />
    <title>{{title}}</title>
  </head>
  <body>
    <h1>Ecco i libri genere {{title}}</h1>
    <div class="main_box">
      {{#each libri}}

        <div class="card">
          <div class="info">
            <h2 class="title">{{this.titolo}}</h2>
            <h3 class="author">{{this.autore}}</h3>
          </div>
          <div class="details">
            <p><strong>Trama:</strong> {{this.trama}}</p>
            <p><strong>Anno:</strong> {{this.anno}}</p>
            <p><strong>Valutazione:</strong>
              {{this.valutazione}}</p>
            <p><strong>Genere:</strong>{{this.genere}}</p>
          </div>
        </div>
      {{/each}}
    </div>
  </body>
</html>